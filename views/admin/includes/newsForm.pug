.col.s12
    -var url = '/admin/news'
    if newsItem
        -var title = newsItem.title || ''
        -var body = newsItem.body || ''
        -var url = `/admin/news/${newsItem._id}/edit`
    form.col.s12(action=url, method='POST')
        .row
            .container.center
                h5 Add News
            .input-field.col.s12
                input#title.validate(type='text', name='title' value=title)
                label(for='title') Title
            .input-field.col.s12
                textarea#body.materialize-textarea.validate(type='text', name='body') !{body}
                label(for='body') Body
            .col.s12
                button.btn.waves-effect.waves-light.teal
                    | ADD NEWS
