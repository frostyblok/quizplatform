extends base.pug
block content
    .row
        .container
            .admin-section
                .container
                    header
                        h5 Select PIN type.
                        form(action='/get-token' method='POST')
                            .row
                                .col.s12
                                    p PINs are categorized based on the number times a PIN can be used
                                    .input-field.col.s12.l8
                                        input(type='hidden', name='_csrf', value=csrf)
                                    .input-field.col.s12.l8
                                        select#token.browser-default(name='token', required)
                                            option(value='', disabled='true', selected='false') Select Category
                                            option(value="2") 2 Uses - &#x20a6;220
                                            option(value="10") 10 Uses - &#x20a6;520
                                        p
                                            button.btn.waves-effect.waves-light.teal SUBMIT
